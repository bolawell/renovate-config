{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":enablePreCommit"],
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "reviewers": ["@eana"],
  "labels": ["dependencies"],
  "timezone": "Etc/UTC",
  "schedule": ["after 8am and before 8pm every weekday"],
  "platformAutomerge": true,
  "digest": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"?(?<currentValue>.*?)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": ["(^|/).env$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_VERSION=\"?(?<currentValue>.*?)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "groupName": "development (patch and minor) upgrades",
      "groupSlug": "dev-deps",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["linuxserver/docker-qbittorrent"],
      "allowedVersions": "!/\\d+.[2-3].\\d+.\\d{14}-\\d{4}-.*ubuntu.*-ls\\d+$/",
      "automerge": true
    }
  ]
}
